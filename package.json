{
  "name": "backend-code-test",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build-ts": "tsc",
    "build": "npm run build-ts && npm run lint",
    "dev": "cross-env NODE_ENV=dev nodemon --exec ts-node -T -r tsconfig-paths/register ./src/api/server.ts -e ts",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve-debug": "nodemon --inspect dist/api/server.js",
    "serve": "node dist/api/server.js",
    "start": "npm run serve",
    "test": "jest --forceExit --coverage --verbose",
    "test:unit": "jest -c jest.config.unit.js",
    "test:watch": "jest -c jest.config.unit.js  --watch",
    "watch-node": "nodemon dist/server.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "lusca": "^1.6.1",
    "reflect-metadata": "^0.1.13",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/errorhandler": "^1.5.0",
    "@types/eslint": "^6.8.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.1",
    "@types/lusca": "^1.6.1",
    "@types/node": "16.7.2",
    "@types/supertest": "^2.0.9",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "cross-env": "^7.0.2",
    "errorhandler": "^1.5.1",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "27.2.0",
    "lint-staged": "^11.0.0",
    "nodemon": "2.0.12",
    "supertest": "6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "10.2.0",
    "tsconfig-paths": "^3.11.0",
    "tsconfig-paths-jest": "^0.0.1",
    "tslint": "6.1.3",
    "typescript": "4.4.3"
  }
}
